@{
    ViewBag.Title = Html.LocalizationString("upload_image_title");
}

<div class="col-lg-5">
    <h3>@ViewBag.Title</h3>
    <hr />

    @using (Html.BeginForm("UploadImages", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-lg-5">
            <span class="col-lg-3">
                <input type="file" name="uploadImages" multiple="multiple" class="input-files" />
            </span>
            <span class="col-lg-3">
                <input type="submit" name="button" value="Upload" class="btn btn-upload" />
            </span>
        </div>
    }

</div>
